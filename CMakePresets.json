{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 25,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "LIMBO_BUILD_TESTS": "ON"
            }
        },
        {
            "name": "base-ninja",
            "hidden": true,
            "inherits": "base",
            "generator": "Ninja"
        },
        {
            "name": "base-vs",
            "hidden": true,
            "inherits": "base",
            "generator": "Visual Studio 17 2022",
            "architecture": "x64",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "debug",
            "displayName": "Debug",
            "description": "Debug build with tests",
            "inherits": "base-ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release",
            "displayName": "Release",
            "description": "Optimized release build with tests",
            "inherits": "base-ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "relwithdebinfo",
            "displayName": "RelWithDebInfo",
            "description": "Release build with debug info",
            "inherits": "base-ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        },
        {
            "name": "debug-vs",
            "displayName": "Debug (Visual Studio)",
            "description": "Debug build using Visual Studio generator",
            "inherits": "base-vs"
        },
        {
            "name": "release-vs",
            "displayName": "Release (Visual Studio)",
            "description": "Release build using Visual Studio generator",
            "inherits": "base-vs"
        },
        {
            "name": "asan",
            "displayName": "Debug + ASan",
            "description": "Debug build with Address Sanitizer (Clang/GCC)",
            "inherits": "debug",
            "cacheVariables": {
                "LIMBO_ENABLE_ASAN": "ON"
            }
        },
        {
            "name": "ubsan",
            "displayName": "Debug + UBSan",
            "description": "Debug build with Undefined Behavior Sanitizer (Clang/GCC)",
            "inherits": "debug",
            "cacheVariables": {
                "LIMBO_ENABLE_UBSAN": "ON"
            }
        },
        {
            "name": "ci-linux",
            "displayName": "CI Linux",
            "description": "CI release configuration for Linux",
            "inherits": "base-ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "LIMBO_WARNINGS_AS_ERRORS": "ON"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "ci-windows",
            "displayName": "CI Windows",
            "description": "CI release configuration for Windows",
            "inherits": "base-ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "LIMBO_WARNINGS_AS_ERRORS": "ON"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug",
            "displayName": "Build Debug",
            "configurePreset": "debug"
        },
        {
            "name": "release",
            "displayName": "Build Release",
            "configurePreset": "release"
        },
        {
            "name": "relwithdebinfo",
            "displayName": "Build RelWithDebInfo",
            "configurePreset": "relwithdebinfo"
        },
        {
            "name": "debug-vs",
            "displayName": "Build Debug (VS)",
            "configurePreset": "debug-vs",
            "configuration": "Debug"
        },
        {
            "name": "release-vs",
            "displayName": "Build Release (VS)",
            "configurePreset": "release-vs",
            "configuration": "Release"
        },
        {
            "name": "asan",
            "displayName": "Build ASan",
            "configurePreset": "asan"
        },
        {
            "name": "ubsan",
            "displayName": "Build UBSan",
            "configurePreset": "ubsan"
        },
        {
            "name": "ci-linux",
            "displayName": "Build CI Linux",
            "configurePreset": "ci-linux"
        },
        {
            "name": "ci-windows",
            "displayName": "Build CI Windows",
            "configurePreset": "ci-windows"
        }
    ],
    "testPresets": [
        {
            "name": "debug",
            "displayName": "Test Debug",
            "configurePreset": "debug",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "release",
            "displayName": "Test Release",
            "configurePreset": "release",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "asan",
            "displayName": "Test ASan",
            "configurePreset": "asan",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "ubsan",
            "displayName": "Test UBSan",
            "configurePreset": "ubsan",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "ci-linux",
            "displayName": "Test CI Linux",
            "configurePreset": "ci-linux",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "ci-windows",
            "displayName": "Test CI Windows",
            "configurePreset": "ci-windows",
            "output": {
                "outputOnFailure": true
            }
        }
    ],
    "workflowPresets": [
        {
            "name": "dev-debug",
            "displayName": "Dev Debug Workflow",
            "steps": [
                {
                    "type": "configure",
                    "name": "debug"
                },
                {
                    "type": "build",
                    "name": "debug"
                },
                {
                    "type": "test",
                    "name": "debug"
                }
            ]
        },
        {
            "name": "dev-release",
            "displayName": "Dev Release Workflow",
            "steps": [
                {
                    "type": "configure",
                    "name": "release"
                },
                {
                    "type": "build",
                    "name": "release"
                },
                {
                    "type": "test",
                    "name": "release"
                }
            ]
        },
        {
            "name": "sanitizer-asan",
            "displayName": "ASan Workflow",
            "steps": [
                {
                    "type": "configure",
                    "name": "asan"
                },
                {
                    "type": "build",
                    "name": "asan"
                },
                {
                    "type": "test",
                    "name": "asan"
                }
            ]
        },
        {
            "name": "sanitizer-ubsan",
            "displayName": "UBSan Workflow",
            "steps": [
                {
                    "type": "configure",
                    "name": "ubsan"
                },
                {
                    "type": "build",
                    "name": "ubsan"
                },
                {
                    "type": "test",
                    "name": "ubsan"
                }
            ]
        },
        {
            "name": "ci-linux",
            "displayName": "CI Linux Workflow",
            "steps": [
                {
                    "type": "configure",
                    "name": "ci-linux"
                },
                {
                    "type": "build",
                    "name": "ci-linux"
                },
                {
                    "type": "test",
                    "name": "ci-linux"
                }
            ]
        },
        {
            "name": "ci-windows",
            "displayName": "CI Windows Workflow",
            "steps": [
                {
                    "type": "configure",
                    "name": "ci-windows"
                },
                {
                    "type": "build",
                    "name": "ci-windows"
                },
                {
                    "type": "test",
                    "name": "ci-windows"
                }
            ]
        }
    ]
}
